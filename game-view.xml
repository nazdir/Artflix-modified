      <alignment>center</alignment>
      <fontSize>0.03</fontSize>
      <color>ffffff</color>
      <zIndex>55</zIndex>
    </text>
    <image name="md_flag">
      <color>FFFFFF</color>
      <pos>0.028 0.955</pos>
      <maxSize>0.030 0.025</maxSize>
    </image>
    <image name="md_cheevos, md_notcheevos">
      <path>./_inc/icons/Contest.png</path>
      <pos>0.028 0.184</pos>
