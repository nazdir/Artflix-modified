      <rotation>-90</rotation>
    </image>
    <text name="md_developer">
      <pos>0.7 0.15</pos>
      <padding>0 0.005 0.01 0</padding>
      <size>0.15 0</size>
      <fontSize>0.02</fontSize>
      <color>ffffff</color>
      <glowColor>00000016</glowColor>
      <glowSize>1</glowSize>
      <alignment>left</alignment>
      <lineSpacing>1.18</lineSpacing>
      <fontPath>./_inc/fonts/TiltNeon.ttf</fontPath>
      <backgroundColor>ff000055</backgroundColor>
    </text>
    <text name="md_publisher">
      <padding>0 0.005 0.01 0</padding>
      <pos>0.85 0.15</pos>
      <size>0.15 0</size>
      <fontSize>0.02</fontSize>
      <color>ffffff</color>
      <glowColor>00000016</glowColor>
      <glowSize>1</glowSize>
      <alignment>right</alignment>
      <lineSpacing>1.18</lineSpacing>
      <fontPath>./_inc/fonts/TiltNeon.ttf</fontPath>
      <backgroundColor>ff000055</backgroundColor>
    </text>
    <text name="md_description">
      <pos>0.7 0.2</pos>
      <padding>0 0 0.01 0</padding>
      <size>0.30 0.20</size>
      <fontSize>0.02</fontSize>
      <color>ffffff</color>
      <glowColor>00000016</glowColor>
      <glowSize>1</glowSize>
      <alignment>left</alignment>
      <lineSpacing>1.18</lineSpacing>
      <fontPath>./_inc/fonts/TiltNeon.ttf</fontPath>
      <backgroundColor>ff000055</backgroundColor>
    </text>
    <rating name="md_rating">
      <origin>0.5 0</origin>
      <pos>0.029 0.298</pos>
      <size>0.035 0.025</size>
      <rotation>90</rotation>
      <color>ffffff</color>
      <unfilledPath>./_inc/images/star_empty.svg</unfilledPath>
      <unfilledColor>ffffff</unfilledColor>
      <horizontalAlignment>left</horizontalAlignment>
      <zIndex>15</zIndex>
    </rating>
    <text name="md_players">
      <fontPath>./_inc/fonts/players.ttf</fontPath>
      <text>1</text>
      <size>0.034 0.039</size>
