      <zIndex>5</zIndex>
    </image>
    <text name="md_lbl_rating, md_lbl_releasedate, md_lbl_developer, md_lbl_publisher, md_lbl_genre, md_lbl_players, md_lbl_lastplayed, md_lbl_playcount">
      <color>A0A0B000</color>
      <fontPath>./_inc/fonts/Homizio.ttf</fontPath>
    </text>
    <text name="md_developer, md_publisher, md_genre, md_players, md_playcount, md_description">
      <color>ffffff00</color>
      <fontPath>./_inc/fonts/Homizio.ttf</fontPath>
    </text>
    <datetime name="md_releasedate, md_lastplayed">
      <color>ffffff00</color>
      <fontPath>./_inc/fonts/Homizio.ttf</fontPath>
    </datetime>
    <rating name="md_rating">
      <pos>0.83 0.94</pos>
      <size>0.05 0.03</size>
      <color>FFFFFF</color>
      <unfilledColor>808080</unfilledColor>
      <fontPath>./_inc/fonts/Homizio.ttf</fontPath>
    </rating>
    <imagegrid name="gamegrid">
      <pos>0.025 0.16</pos>
      <size>0.950 0.774</size>
      <margin>0.005 0.010</margin>
      <padding>0.03 0.05 0.03 0.04</padding>
      <autoLayout>5 2</autoLayout>
      <autoLayoutSelectedZoom>1.12</autoLayoutSelectedZoom>
      <animateSelection>true</animateSelection>
    </imagegrid>
    <gridtile name="default">
      <backgroundColor>FFFFFF00</backgroundColor>
      <backgroundCornerSize>9 9</backgroundCornerSize>
      <selectionMode>image</selectionMode>
      <padding>5 5</padding>
      <imageColor>FFFFFF99</imageColor>
    </gridtile>
    <gridtile name="selected">
      <backgroundCenterColor>000000</backgroundCenterColor>
      <backgroundEdgeColor>${mainColor}</backgroundEdgeColor>
      <imageColor>FFFFFFFF</imageColor>
    </gridtile>
    <text name="gridtile">
      <color>D0D0D0</color>
      <backgroundColor>00000000</backgroundColor>
      <fontSize>0.022</fontSize>
      <alignment>center</alignment>
      <size>1 0.24</size>
    </text>
    <text name="gridtile_selected">
      <color>FFFFFF</color>
      <glowColor>00000016</glowColor>
      <glowSize>3</glowSize>
    </text>
    <text name="md_name">
      <fontPath>./_inc/fonts/Homizio.ttf</fontPath>
    </text>
  </view>
  <customView name="Custom" inherits="grid">
    <image name="art" extra="true">
      <color>606066FF</color>
      <color>606066FF</color>
      <colorEnd>000000FF</colorEnd>
      <gradientType>vertical</gradientType>
    </image>
    <image name="filter" extra="true">
      <pos>0 0.65</pos>
      <size>1 0.4</size>
      <path>./_inc/frame.png</path>
      <color>00000016</color>
      <colorEnd>000000FF</colorEnd>
      <gradientType>vertical</gradientType>
      <zIndex>150</zIndex>
    </image>
    <image name="art2" extra="true">
      <pos>0 0</pos>
      <size>0 0</size>
      <zIndex>0</zIndex>
    </image>
    <image name="md_marquee">
      <pos>0.85 0</pos>
      <padding>0 0.05 0.01 0</padding>
      <origin>0.5 0</origin>
      <maxSize>0.3 0.15</maxSize>
    </image>
