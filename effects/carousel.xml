<?xml version="1.0" encoding="UTF-8"?>
<theme>
  <formatVersion>7</formatVersion>
  <view name="system">
    <image name="logo">
      <linearSmooth>true</linearSmooth>
      <storyboard event="activate">
        <animation property="opacity" to="1" begin="0" duration="500" mode="linear" />
        <animation property="scale" to="1" begin="0" duration="500" mode="easeOut" />
        <animation property="x" to="0.2" begin="0" duration="0" />
        <animation property="x" from="0.2" to="0.1" begin="1000" duration="1000" mode="easeIn" />
      </storyboard>
      <storyboard event="scroll">
        <animation property="scale" to="0.75" begin="0" duration="0" />
        <animation property="opacity" to="0.5" begin="0" duration="0" />
        <animation property="x" to="0.2" begin="0" duration="0" />
        <animation property="x" to="1" begin="1000" duration="1000" mode="easeIn" />
      </storyboard>
      <storyboard event="deactivate">
        <animation property="scale" to="0.75" begin="0" duration="500" mode="easeOut" />
        <animation property="opacity" to="0.5" begin="0" duration="500" mode="easeOut" />
        <animation property="x" to="0.2" begin="0" duration="0" />
        <animation property="x" to="1" begin="1000" duration="1000" mode="easeIn" />
      </storyboard>
    </image>
  </view>
</theme>